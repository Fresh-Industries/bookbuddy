generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  password        String
  username        String?           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime?        @updatedAt
  userBooks       UserBook[]
  readingSessions ReadingSession[]
  notes           Note[]
}

model UserBook {
  id            Int             @id @default(autoincrement())
  userId        Int
  googleBooksId String
  imageUrl      String?
  title         String
  authors       String[]
  categories    String[]
  pageCount     Int?            @default(0)
  pagesRead     Int?            @default(0)
  status        String          @default("Want to read")
  timeRead      Int?            @default(0)
  rating        Int?
  startedAt     DateTime?
  finishedAt    DateTime?
  user          User            @relation(fields: [userId], references: [id])
  readingSessions ReadingSession[]
  notes         Note[]

  @@unique([userId, googleBooksId])
}

model ReadingSession {
  id          Int       @id @default(autoincrement())
  userId      Int
  userBookId  Int
  startedAt   DateTime
  pageStart   Int       @default(0)
  pageEnd   Int       @default(0)
  timeSpent   Int?      // Time spent in this session, in minutes

  user        User      @relation(fields: [userId], references: [id])
  userBook    UserBook  @relation(fields: [userBookId], references: [id])
  notes       Note[]

  @@index([userId])
  @@index([userBookId])
}

model Note {
  id               Int            @id @default(autoincrement())
  content          String
  createdAt        DateTime       @default(now())
  userId           Int
  userBookId       Int
  readingSessionId Int

  user             User           @relation(fields: [userId], references: [id])
  userBook         UserBook       @relation(fields: [userBookId], references: [id])
  readingSession   ReadingSession @relation(fields: [readingSessionId], references: [id])

  @@index([userId])
  @@index([userBookId])
  @@index([readingSessionId])
}


