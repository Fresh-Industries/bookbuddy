generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  password        String
  username        String?           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime?        @updatedAt
  userBooks       UserBook[]
  readingSessions ReadingSession[]
  notes           Note[]
  highlights     Highlight[]
  readingGoals   ReadingGoal[]
  userStats      UserStats?
  preferences    UserPreference?
}

model UserBook {
  id            Int             @id @default(autoincrement())
  userId        Int
  googleBooksId String
  imageUrl      String?
  title         String
  authors       String[]
  categories    String[]
  pageCount     Int?            @default(0)
  pagesRead     Int?            @default(0)
  status        String          @default("Want to read")
  timeRead      Int?            @default(0)
  rating        Int?
  startedAt     DateTime?
  finishedAt    DateTime?
  user          User            @relation(fields: [userId], references: [id])
  readingSessions ReadingSession[]
  notes         Note[]
  highlights    Highlight[]

  @@unique([userId, googleBooksId])
}

model ReadingSession {
  id          Int       @id @default(autoincrement())
  userId      Int
  userBookId  Int
  startedAt   DateTime  @default(now())
  endedAt     DateTime?
  pageStart   Int       @default(0)
  pageEnd     Int       @default(0)
  timeSpent   Int?      // Time spent in this session, in minutes

  user        User      @relation(fields: [userId], references: [id])
  userBook    UserBook  @relation(fields: [userBookId], references: [id])
  notes       Note[]

  @@index([userId])
  @@index([userBookId])
}

model Note {
  id               Int            @id @default(autoincrement())
  content          String
  pageNumber       Int?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime?      @updatedAt
  userId           Int
  userBookId       Int
  readingSessionId Int?

  user             User           @relation(fields: [userId], references: [id])
  userBook         UserBook       @relation(fields: [userBookId], references: [id])
  readingSession   ReadingSession? @relation(fields: [readingSessionId], references: [id])

  @@index([userId])
  @@index([userBookId])
  @@index([readingSessionId])
}

model Highlight {
  id            Int       @id @default(autoincrement())
  userId        Int
  userBookId    Int
  content       String    // The highlighted text
  pageNumber    Int?
  chapter      String?
  color        String    @default("yellow") // yellow, green, blue, pink
  note         String?   // Optional note attached to highlight
  createdAt    DateTime  @default(now())

  user          User      @relation(fields: [userId], references: [id])
  userBook      UserBook  @relation(fields: [userBookId], references: [id])

  @@index([userId])
  @@index([userBookId])
}

model ReadingGoal {
  id          Int       @id @default(autoincrement())
  userId      Int
  year        Int       // Year goal is for
  month       Int?      // Optional monthly goal
  type        String    // "pages", "books", "minutes"
  target      Int       // Target number
  progress    Int       @default(0) // Current progress
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id])

  @@unique([userId, year, month, type])
  @@index([userId])
}

model UserStats {
  id              Int       @id @default(autoincrement())
  userId          Int       @unique
  totalPagesRead   Int       @default(0)
  totalBooksRead  Int       @default(0)
  totalMinutesRead Int       @default(0)
  currentStreak   Int       @default(0) // Current reading streak in days
  longestStreak  Int       @default(0) // Longest reading streak
  lastReadDate    DateTime? // Last day user read
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id])

  @@index([userId])
}

model UserPreference {
  id              Int       @id @default(autoincrement())
  userId          Int       @unique
  favoriteGenres String[]  @default([]) // e.g., ["fiction", "sci-fi"]
  favoriteAuthors String[]  @default([])
  dislikeGenres  String[]  @default([])
  readingSpeed    Int       @default(30) // pages per hour estimate
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id])
}
